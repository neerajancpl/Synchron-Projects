<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:listSelector="@drawable/uevents_list_selected"
        android:background="@drawable/uevents_list_deselected">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="EventName"
            android:id="@+id/txt_event_name"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/txt_event_address"
            android:layout_alignStart="@+id/txt_event_address"
            android:layout_alignRight="@+id/event_image"
            android:layout_alignEnd="@+id/event_image" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="place"
            android:id="@+id/txt_event_address"
            android:layout_below="@+id/txt_event_name"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10"
            android:id="@+id/txt_event_count"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/event_image"
            android:layout_toRightOf="@+id/imag_attStatus"
            android:layout_toEndOf="@+id/imag_attStatus" />


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/event_image"
            android:scaleType="fitStart"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:id="@+id/imag_attStatus"
            android:layout_alignBottom="@+id/event_image"
            android:layout_alignLeft="@+id/text_date"
            android:layout_alignStart="@+id/text_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:id="@+id/text_date"
            android:layout_below="@+id/txt_event_address"
            android:layout_alignLeft="@+id/txt_event_address"
            android:layout_alignStart="@+id/txt_event_address"
            android:layout_alignRight="@+id/txt_event_address"
            android:layout_alignEnd="@+id/txt_event_address" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attending"
            android:id="@+id/textView9"
            android:layout_alignBottom="@+id/txt_event_count"
            android:layout_toRightOf="@+id/txt_event_count"
            android:layout_toEndOf="@+id/txt_event_count" />
    </RelativeLayout>

</LinearLayout>